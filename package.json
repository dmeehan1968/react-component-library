{
  "name": "react-component-library",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "bun@1.3.0",
  "engines": {
    "bun": ">=1.3.0 <2"
  },
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx tsc -b && vite build",
    "lint": "bunx eslint .",
    "preview": "bunx vite preview",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "pw:ct": "bunx playwright test -c playwright-ct.config.ts",
    "pw:ct:ui": "bunx playwright test -c playwright-ct.config.ts --ui",
    "pw:install": "bunx playwright install --with-deps"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "daisyui": "^5.3.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@happy-dom/global-registrator": "^14.3.0",
    "@playwright/experimental-ct-react": "^1.56.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bun": "^1.3.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "happy-dom": "^19.0.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
